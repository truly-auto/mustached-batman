<Window x:Class="_481Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="393" Width="727" xmlns:my="clr-namespace:_481Project">
    <Grid>
        <TabControl Height="293" HorizontalAlignment="Left" Margin="12,49,0,0" Name="tabControl1" VerticalAlignment="Top" Width="681">
            <TabItem Header="Team 1" Name="tabItem1" Height="20" Width="100">
                <DockPanel Height="246" Name="dockPanel1" Width="670">
                    <my:Roster x:Name="roster1" Width="242" />
                    <my:Calendar x:Name="calendar1" />
                    <my:Stats Height="400" x:Name="stats1" Width="250" />
                </DockPanel>
            </TabItem>
            <TabItem Header="Add/Create Team">
                <Grid Height="242" Name="grid1" Width="668">
                    <GridSplitter Height="242" HorizontalAlignment="Left" Margin="318,0,0,0" Name="gridSplitter1" VerticalAlignment="Top" Width="15" />
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="24,10,0,0" Name="textBlock2" Text="Pending Teams" VerticalAlignment="Top" Width="89" FontWeight="Bold" />
                    <ScrollViewer Height="171" HorizontalAlignment="Left" Margin="24,54,0,0" Name="scrollViewer1" VerticalAlignment="Top" Width="259" />
                    <TextBlock FontWeight="Bold" Height="23" HorizontalAlignment="Right" Margin="0,10,219,0" Name="textBlock3" Text="Create A Team" VerticalAlignment="Top" Width="89" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="360,133,0,0" Name="textBox1" VerticalAlignment="Top" Width="212" />
                    <Label Content="Team name :" Height="24" HorizontalAlignment="Left" Margin="360,111,0,0" Name="label1" VerticalAlignment="Top" Width="109" />
                    <Button Content="Upload" Height="26" HorizontalAlignment="Left" Margin="578,81,0,0" Name="button1" VerticalAlignment="Top" Width="68" />
                    <Label Content="Team Logo :" Height="28" HorizontalAlignment="Left" Margin="360,30,0,0" Name="label3" VerticalAlignment="Top" />
                    <Image Height="53" HorizontalAlignment="Left" Margin="360,54,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="75" Source="/481Project;component/Images/1242115138_405.jpg" />
                    <TextBox Height="25" HorizontalAlignment="Right" Margin="0,82,96,0" Name="textBox3" VerticalAlignment="Top" Width="131" />
                    <Button Content="Create" Height="24" HorizontalAlignment="Left" Margin="587,0,0,6" Name="button3" VerticalAlignment="Bottom" Width="71" Click="button3_Click" />
                </Grid>
            </TabItem>
        </TabControl>
        <Canvas Height="34" HorizontalAlignment="Left" Margin="12,9,0,0" Name="canvas1" VerticalAlignment="Top" Width="681">
            <TextBlock Canvas.Left="0" Canvas.Top="0" Height="34" Name="textBlock1" Text="Welcome User" Width="128" FontWeight="Bold" FontSize="18" />
            <Expander Canvas.Left="175" Canvas.Top="3" Header="Messages" Height="25" Name="expander1" Width="89" Expanded="expander1_Expanded">
                <Grid></Grid>
            </Expander>
            <Expander Canvas.Left="270" Canvas.Top="3" Header="Notifications" Height="25" Name="expander2" Width="98" Expanded="expander2_Expanded">
                <Grid />
            </Expander>
            <Button Canvas.Left="555" Canvas.Top="6" Content="Logout" Height="23" Name="button2" Width="126" Click="button2_Click" />
        </Canvas>
    </Grid>
</Window>
