<Window x:Class="_481Project.Help.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HelpWindow" Height="387" Width="300">
    <Grid Height="350">
        <Label Content="Help Documentation" Height="37" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" />
        <Label Content="Adding a game" Height="34" HorizontalAlignment="Left" Margin="0,43,0,0" Name="label2" VerticalAlignment="Top" FontSize="20" />
        <TextBlock Height="211" HorizontalAlignment="Left" Margin="12,83,0,0" Name="textBlock1" Text="To add an event to the system, first click on the calendar on the day that you would like the event on. A window will pop up and on the left hand side you must enter the  events' type, location, time, and a description of the event. The event can be a game, a practice, or a generic event, such as a BBQ. Once you have added the necessary information, click on the &quot;add&quot; button to complete the process. The event will now show up on the calendar as the colour corresponding to the event type. See the legend under the calendar for event types and their corresponding colours." VerticalAlignment="Top" TextWrapping="Wrap" Width="266" />
        <Label Content="More help Coming soon!" Height="38" HorizontalAlignment="Left" Margin="12,300,0,0" Name="label3" VerticalAlignment="Top" FontSize="20" />
    </Grid>
</Window>
